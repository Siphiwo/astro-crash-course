---
const {title} = Astro.props
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
        <div class="flex">
            <sidebar class="w-2/12 bg-slate-800 fixed top-0 left-0 h-screen">
                <p>This is the sidebar content</p>
            </sidebar>
            <section class="container flex items-center justify-center w-10/12 bg-slate-200">
                <slot />
            </section>
        </div>
	</body>
</html>
